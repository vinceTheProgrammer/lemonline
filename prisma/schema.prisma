// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  discordId    String   @id
  xp           Int      @default(0)
  messageCount Int      @default(0)
  createdAt    DateTime @default(now())
  intro        Intro?
}

model ChannelXpSettings {
  channelId            String    @id
  baseMessageCreate    Int       @default(0)
  baseThreadCreate     Int       @default(0)
  multiplier           Float     @default(1)
  multiplierExpiration DateTime?
}

model ServerXpSettings {
  guildId         String @id
  cooldownSeconds Int    @default(5)
  levelFormula    String @default("100 * (level - 1) * level / 2")
}

model Level {
  id         Int         @id @default(autoincrement())
  levelRoles LevelRole[]
}

model Role {
  roleId     String      @id
  levelRoles LevelRole[]
}

model LevelRole {
  id      Int     @id @default(autoincrement())
  level   Level   @relation(fields: [levelId], references: [id])
  levelId Int
  role    Role    @relation(fields: [roleId], references: [roleId])
  roleId  String
  gained  Boolean

  @@unique([levelId, roleId])
}

model Intro {
  id            Int               @id @default(autoincrement())
  username      String?
  description   String?
  interests     String?
  postMessageId String?
  postThreadId  String?
  repostCount   Int               @default(0)
  socials       SocialMediaLink[]
  user          User              @relation(fields: [userId], references: [discordId])
  userId        String            @unique
}

model SocialMediaLink {
  id       Int    @id @default(autoincrement())
  platform String
  url      String
  Intro    Intro  @relation(fields: [introId], references: [id])
  introId  Int
}

model Message {
  id        Int      @id @default(autoincrement())
  discordId String
  timestamp DateTime @default(now())
}
